@model Evento.Domain.Entity.Dependente

<form asp-action="Dependentes">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ClienteId" />
    <div class="form-row">
        <div class="form-group col-md-5">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" type="datetime-local" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label asp-for="Idade" class="control-label"></label>
            <input asp-for="Idade" class="form-control" />
            <span asp-validation-for="Idade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <label asp-for="PlanoSaude" class="control-label"></label>
            <input asp-for="PlanoSaude" class="form-control" />
            <span asp-validation-for="PlanoSaude" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="GrupoSanguineo" class="control-label"></label>
            <input asp-for="GrupoSanguineo" class="form-control" />
            <span asp-validation-for="GrupoSanguineo" class="text-danger"></span>
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="Escola" class="control-label"></label>
            <input asp-for="Escola" class="form-control" />
            <span asp-validation-for="Escola" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="EmergenciaHospital" class="control-label"></label>
            <input asp-for="EmergenciaHospital" class="form-control" />
            <span asp-validation-for="EmergenciaHospital" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Medico" class="control-label"></label>
            <input asp-for="Medico" class="form-control" />
            <span asp-validation-for="Medico" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="FoneMedico" class="control-label"></label>
            <input asp-for="FoneMedico" class="form-control" />
            <span asp-validation-for="FoneMedico" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="RestricaoMedicamento" class="control-label"></label>
            <input asp-for="RestricaoMedicamento" class="form-control" />
            <span asp-validation-for="RestricaoMedicamento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="QualMedicamento" class="control-label"></label>
            <input asp-for="QualMedicamento" class="form-control" />
            <span asp-validation-for="QualMedicamento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="RestricaoAlimentar" class="control-label"></label>
            <input asp-for="RestricaoAlimentar" class="form-control" />
            <span asp-validation-for="RestricaoAlimentar" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="QualAlimento" class="control-label"></label>
            <input asp-for="QualAlimento" class="form-control" />
            <span asp-validation-for="QualAlimento" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="PiscinaRestricao" class="control-label"></label>
            <input asp-for="PiscinaRestricao" class="form-control" />
            <span asp-validation-for="PiscinaRestricao" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="AutorizaPasseio" class="control-label"></label>
            <input asp-for="AutorizaPasseio" class="form-control" />
            <span asp-validation-for="AutorizaPasseio" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="Observacao" class="control-label"></label>
            <input asp-for="Observacao" class="form-control" />
            <span asp-validation-for="Observacao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-primary">Salvar</button>
        <button type="button" class="btn btn-outline-secondary btn-dependente-voltar">Fechar</button>
    </div>
</form>

<hr />

