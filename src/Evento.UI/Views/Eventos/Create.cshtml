@model Evento.Domain.Entity.Eventos

@{
    ViewData["Title"] = "Eventos";
}

<fieldset>
    <legend>
        Cadastro de Eventos
    </legend>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Responsavel" class="control-label"></label>
                <input asp-for="Responsavel" class="form-control" />
                <span asp-validation-for="Responsavel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="FoneResponsavel" class="control-label"></label>
                <input asp-for="FoneResponsavel" class="form-control" />
                <span asp-validation-for="FoneResponsavel" class="text-danger"></span>
            </div>
            @*<div class="form-group col-md-4">
                    <label asp-for="PeriodoEvento" class="control-label"></label>
                    <input asp-for="PeriodoEvento" class="form-control" />
                    <span asp-validation-for="PeriodoEvento" class="text-danger"></span>
                </div>*@
            <div class="form-group col-md-4">
                <label asp-for="Horarios" class="control-label"></label>
                <input asp-for="Horarios" class="form-control" />
                <span asp-validation-for="Horarios" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="ValorSocio" class="control-label"></label>
                <input asp-for="ValorSocio" class="form-control" />
                <span asp-validation-for="ValorSocio" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ValorNaoSocio" class="control-label"></label>
                <input asp-for="ValorNaoSocio" class="form-control" />
                <span asp-validation-for="ValorNaoSocio" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="FaixaEtaria" class="control-label"></label>
                <input asp-for="FaixaEtaria" class="form-control" />
                <span asp-validation-for="FaixaEtaria" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="custom-control custom-switch">
                <label class="custom-control-label">
                    <input class="custom-control-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-primary" />
            <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
        </div>
    </form>
</fieldset>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
