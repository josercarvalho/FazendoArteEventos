@model Evento.Domain.Entity.Cliente

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Dados do Cliente</h3>
    </div>
    <form asp-controller="Clientes" asp-action="Edit" id="frmCliente">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control CPF" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" type="text" class="form-control nascimento" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Sexo" class="control-label"></label>
                    <select asp-for="Sexo" class="form-control" asp-items="Html.GetEnumSelectList<Sexo>()"></select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Profissao" class="control-label"></label>
                    <input asp-for="Profissao" class="form-control" />
                    <span asp-validation-for="Profissao" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control telefone" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control telefone" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Escolaridade" class="control-label"></label>
                    <select asp-for="Escolaridade" class="form-control" asp-items="Html.GetEnumSelectList<Escolaridade>()"></select>
                    <span asp-validation-for="Escolaridade" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Filhos" class="control-label"></label>
                    <input asp-for="Filhos" class="form-control" />
                    <span asp-validation-for="Filhos" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control CEP" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="EstadoId" class="control-label"></label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId">
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CidadeId" class="control-label"></label>
                    <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.CidadeId">
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Logradouro" class="control-label"></label>
                    <input asp-for="Logradouro" class="form-control" />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Referencia" class="control-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                    <span asp-validation-for="Referencia" class="text-danger"></span>
                </div>
            </div>
            <div class="card-tools">
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary"> Salvar </button>
                    <a class="btn btn-outline-secondary" asp-action="Index"> Voltar </a>
                </div>
            </div>
        </div>
    </form>
</div>
