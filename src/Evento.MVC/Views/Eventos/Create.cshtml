@model Evento.Domain.Entity.Eventos

@{
    ViewData["Title"] = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Eventos</h1>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-outline-secondary float-sm-right" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">

            <!-- Default box -->
            <div class="card card-blue card-outline">
                <div class="card-header">
                    <h3 class="card-title">Cadastro de Eventos</h3>

                    <div class="card-tools">
                        @*<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>*@
                    </div>
                </div>

                <form asp-action="Create">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">

                            <div class="form-group col-md-4">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Local" class="control-label"></label>
                                <input asp-for="Local" class="form-control" />
                                <span asp-validation-for="Local" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Responsavel" class="control-label"></label>
                                <input asp-for="Responsavel" class="form-control" />
                                <span asp-validation-for="Responsavel" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="FoneResponsavel" class="control-label"></label>
                                <input asp-for="FoneResponsavel" class="form-control" />
                                <span asp-validation-for="FoneResponsavel" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="DataIni" class="control-label"></label>
                                <input asp-for="DataIni" type="text" class="form-control mskData" />
                                <span asp-validation-for="DataIni" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="DataFim" class="control-label"></label>
                                <input asp-for="DataFim" type="text" class="form-control mskData" />
                                <span asp-validation-for="DataFim" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Horarios" class="control-label"></label>
                                <input asp-for="Horarios" class="form-control" />
                                <span asp-validation-for="Horarios" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="ValorSocio" class="control-label"></label>
                                <input asp-for="ValorSocio" type="text" class="form-control money2" />
                                <span asp-validation-for="ValorSocio" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="ValorNaoSocio" class="control-label"></label>
                                <input asp-for="ValorNaoSocio" type="text" class="form-control money2" />
                                <span asp-validation-for="ValorNaoSocio" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="FaixaEtaria" class="control-label"></label>
                                <input asp-for="FaixaEtaria" class="form-control" />
                                <span asp-validation-for="FaixaEtaria" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Descricao" class="control-label"></label>
                                <input asp-for="Descricao" class="form-control" />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <input type="checkbox" asp-for="Ativo" id="AutorizaPasseio">
                                        </span>
                                    </div>
                                    <input type="text" id="AtivoInativo" class="form-control AtivoInativo disabled"  placeholder="Inativo" disabled>
                                </div>
                                <span for="Ativo" class="text-danger"></span>
                            </div>
                            <span for="AutorizaPasseio" class="text-danger"></span>
                            @*<div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                                    </label>
                                </div>*@
                        </div>
                    </div>

                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                            <a class="btn btn-outline-secondary" asp-action="Index"> Voltar</a>
                        </div>
                    </div>
                    <!-- /.card-footer-->
                </form>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(function () {
        /* Mascara dos campos específicos */
        //$('.CPF').mask('000.000.000-00');
        //$(".CEP").mask("00.000-000");
        $(".mskData").mask("00/00/0000");
        $('.money2').mask("###.##0,00", { reverse: true });

        var masks = ['(00) 00000-0000', '(00) 0000-00009'];
        $(".telefone").mask(masks[1], {
            onKeyPress: function (val, e, field, options) {
                field.mask(val.length > 14 ? masks[0] : masks[1], options);
            }
        });

        $('#Ativo').on("change", function () {
            if (this.checked == true) {
                $('.AtivoInativo').val('Ativo')
            } else {
                $('.AtivoInativo').val('Inativo')
            }
        })

    });
    </script>
}
